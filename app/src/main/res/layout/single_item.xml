<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fillViewport="true"
    android:id="@+id/single_item"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="296dp"
            android:fillViewport="true"
            android:padding="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/textViewRakat"
            app:layout_constraintEnd_toEndOf="@+id/textViewNamazName"
            app:layout_constraintStart_toEndOf="@+id/textViewNamazName"
            app:layout_constraintTop_toBottomOf="@+id/textViewRakat">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="62dp"
                android:layout_marginEnd="31dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="sans-serif-black"
                android:text="Sabki:"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                app:layout_constraintEnd_toStartOf="@+id/TVSabki"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="63dp"
                android:layout_marginEnd="29dp"
                android:layout_marginBottom="46dp"
                android:fontFamily="sans-serif-black"
                android:text="Manzil:"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/TVManzil"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/TVnm_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="20dp"
                android:hint="1"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/TVStudent"
                app:layout_constraintEnd_toStartOf="@+id/TVStudent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/TVStudent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="66dp"
                android:layout_marginEnd="23dp"
                android:layout_marginBottom="18dp"
                android:fontFamily="sans-serif-black"
                android:hint="Student"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintEnd_toStartOf="@+id/TVDate"
                app:layout_constraintStart_toEndOf="@+id/TVnm_id"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/TVManzil"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="165dp"
                android:layout_marginBottom="46dp"
                android:hint="Manzil"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/TVSabki" />

            <TextView
                android:id="@+id/TVSabak"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="164dp"
                android:layout_marginBottom="23dp"
                android:hint="Sabak"
                app:layout_constraintBottom_toTopOf="@+id/TVSabki"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/TVDate" />

            <TextView
                android:id="@+id/TVSabki"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="168dp"
                android:layout_marginBottom="26dp"
                android:hint="Sabki"
                app:layout_constraintBottom_toTopOf="@+id/TVManzil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/TVSabak" />

            <TextView
                android:id="@+id/TVDate"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="56dp"
                android:layout_marginBottom="27dp"
                android:fontFamily="sans-serif-black"
                android:hint="Date"
                app:layout_constraintBottom_toTopOf="@+id/TVSabak"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/TVStudent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="62dp"
                android:layout_marginEnd="23dp"
                android:layout_marginBottom="21dp"
                android:fontFamily="sans-serif-black"
                android:text="Sabak:"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintEnd_toStartOf="@+id/TVSabak"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TVStudent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>